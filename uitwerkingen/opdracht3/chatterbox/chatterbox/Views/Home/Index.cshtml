@model IEnumerable<chatterbox.Models.Message>

@{
    ViewData["Title"] = "Docker Workshop | Opdracht 3";
}

<div class="text-center">
    <h1 class="display-4">Docker Workshop | Opdracht 3</h1>

    <div class="container bg-light rounded p-4 pb-3 shadow">
        <h2>Bericht opslaan</h2>

        <form asp-action="SaveMesssage">
            <div class="form-group mb-3">
                <input type="text" class="form-control" id="bericht" asp-for="@Model.FirstOrDefault().Body" placeholder=" Type hier een bericht om op te slaan">
            </div>

            <button type="submit" class="btn btn-primary">Opslaan</button>
        </form>
    </div>

    <hr class="mt-4 mb-4"/>

    <div class="container bg-light rounded p-4 pb-3 shadow position-relative">
        <h2>Alle berichten</h2>

        <form asp-action="Index">
            <button type="submit" id="refresh" class="btn btn-primary position-absolute" title="Refresh" style="top: 5px; right: 5px">
                <svg width="32px" height="32px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M4.06189 13C4.02104 12.6724 4 12.3387 4 12C4 7.58172 7.58172 4 12 4C14.5006 4 16.7332 5.14727 18.2002 6.94416M19.9381 11C19.979 11.3276 20 11.6613 20 12C20 16.4183 16.4183 20 12 20C9.61061 20 7.46589 18.9525 6 17.2916M9 17H6V17.2916M18.2002 4V6.94416M18.2002 6.94416V6.99993L15.2002 7M6 20V17.2916" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> </g></svg>
            </button>
        </form>

        @foreach (var item in Model) {
            <div class="d-flex">
                <strong>@Html.DisplayFor(modelItem => item.CreatedAt)</strong>
                <p style="margin-left: 2px">| @Html.DisplayFor(modelItem => item.Body)</p>
            </div>
        }
    </div>
</div>
